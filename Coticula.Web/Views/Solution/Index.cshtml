@model IEnumerable<Coticula.Web.Models.Result>

@{
    ViewBag.Title = "Result list";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Submit", "Index", "Submit")
</p>
<table>
    <tr>
        <th>
            Id
        </th>
        <th>
            Time
        </th>
        <th>
            Language
        </th>
        <th>
            Verdict
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Solution.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Solution.Language.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Verdict.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
